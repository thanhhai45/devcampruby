<h1>Edit this Portfolio Item</h1>

<%= form_with(model: @portfolio_items, local: true) do |form| %>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title, id: :portfolio_title %>
    </div>

    <div class="field">
      <%= form.label :subtitle %>
      <%= form.text_field :subtitle, id: :portfolio_subtitle %>
    </div>

    <div class="field">
      <%= form.label :body %>
      <%= form.text_area :body, id: :portfolio_body %>
    </div>

    <div class="field">
      <%= form.label :main_image %>
      <%= form.text_field :main_image, id: :main_image %>
    </div>

    <div class="field">
      <%= form.label :thumb_image %>
      <%= form.text_area :thumb_image, id: :thumb_image %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
<% end %>